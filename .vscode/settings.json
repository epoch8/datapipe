{
    "python.testing.pytestArgs": [
        ".",
        "--ignore=test_data"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.nosetestsEnabled": false,
    "python.testing.pytestEnabled": true,
    "sqltools.connections": [
        {
            "previewLimit": 50,
            "driver": "SQLite",
            "name": "test",
            "database": "${workspaceFolder:c12n-pipe}/test_data/test.sqlite"
        }
    ],
    "sqltools.useNodeRuntime": true,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=127"
    ],
    "python.formatting.provider": "black",
    "githubIssues.queries": [
        {
            "label": "My Issues",
            "query": "default"
        },
        {
            "label": "v0.10 Issues",
            "query": "state:open repo:${owner}/${repository} sort:created-desc milestone:v0.10 "
        },
        {
            "label": "v0.11 Issues",
            "query": "state:open repo:${owner}/${repository} sort:created-desc milestone:v0.11 "
        },
        {
            "label": "Backlog",
            "query": "state:open repo:${owner}/${repository} sort:created-desc no:milestone"
        },
    ]
}